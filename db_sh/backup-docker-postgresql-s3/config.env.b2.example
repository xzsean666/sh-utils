# 基础配置
CONTAINER_NAME="trade-postgresql"
DB_NAME="MyDB"
DB_USER="sean"
DB_PASSWORD="your-db-password"

# 备份保存目录与保留策略
BACKUP_DIR="/home/user/backups/postgres"
RETENTION_COUNT=3

# 定义要执行的上传目标
UPLOAD_TARGETS=(B2_MAIN)

# --- Backblaze B2 (S3 兼容) 上传示例 ---
# TYPE 默认 S3, MODE 默认 sync
B2_MAIN_S3_PROVIDER=Backblaze
# 按你的 bucket 所在 region 选择对应 endpoint，例如：
# https://s3.us-west-004.backblazeb2.com
# https://s3.us-east-005.backblazeb2.com
# https://s3.eu-central-003.backblazeb2.com
B2_MAIN_S3_ENDPOINT="https://s3.us-west-004.backblazeb2.com"
B2_MAIN_S3_BUCKET="my-b2-bucket"
B2_MAIN_S3_REGION="us-west-004"
# B2_MAIN_S3_PATH 默认 "<CONTAINER_NAME>_backup" 若不填
# B2_MAIN_S3_PATH="postgres"
# 对 B2 一般建议 path-style；不写也会默认 true
B2_MAIN_S3_FORCE_PATH_STYLE=true
B2_MAIN_S3_ACCESS_KEY="b2-s3-access-key"
B2_MAIN_S3_SECRET_KEY="b2-s3-secret-key"
# B2_MAIN_RCLONE_FLAGS="--s3-chunk-size 64M"

