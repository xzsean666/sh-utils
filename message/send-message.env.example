# Slack Configuration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# DingTalk Configuration
DING_WEBHOOK_URL="https://oapi.dingtalk.com/robot/send?access_token=YOUR_ACCESS_TOKEN"
# Optional: Secret for security settings (SEC...)
DING_WEBHOOK_SECRET="SEC..."

# Feishu (Lark) Configuration
FEISHU_WEBHOOK_URL="https://open.feishu.cn/open-apis/bot/v2/hook/YOUR_HOOK_ID"
# Optional: Secret for security settings
FEISHU_WEBHOOK_SECRET="YOUR_SECRET"

# Optional: Hostname to identify the source of the message
HOST_NAME="prod-server-01"

# Repeat Configuration
# Number of times to send the message (default: 1)
REPEAT_COUNT=1
# Interval in seconds between repeats (default: 10)
REPEAT_INTERVAL=10
